{
  "name": "crafting-the-internet",
  "description": "Crafting the Internet",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "Benjamin Ceglowski",
  "license": "BSD-2-Clause",
  "scripts": {
    "start":
      "npm run clean && npm run build:node && cross-env NODE_ENV=development node buildServer",
    "start:prod": "npm run build && npm run serve",
    "serve": "cross-env NODE_ENV=production node buildServer",
    "serve:ssg": "serve buildStatic",
    "build":
      "npm run build:client && npm run build:server && npm run build:node",
    "prebuild:client": "rimraf buildClient",
    "build:client":
      "cross-env NODE_ENV=production webpack --progress --config webpack/client.prod.js",
    "prebuild:server": "rimraf buildServer",
    "build:server":
      "cross-env NODE_ENV=production webpack --progress --config webpack/server.prod.js",
    "build:node":
      "cross-env NODE_ENV=production tsc server/index.ts --outDir buildServer/ --lib DOM,ES5,ES6,ES7,ScriptHost",
    "ssg":
      "rimraf buildStatic && cross-env NODE_ENV=production ts-node --O '{\"module\":\"commonjs\"}' ./server/staticSiteGenerator.ts",
    "postssg":
      "ncp buildClient buildStatic/static && ncp serviceworker/ buildStatic/ && ncp opengraph/ buildStatic/opengraph/",
    "clean": "rimraf buildClient buildServer",
    "stage": "npm run build && npm run ssg && npm run serve:ssg",
    "predeploy": "npm run build && npm run ssg",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "babel-plugin-universal-import": "^3.0.0",
    "cross-fetch": "^2.2.2",
    "dateformat": "^3.0.3",
    "express": "^4.16.3",
    "formik": "^1.0.1",
    "history": "^4.6.3",
    "io-ts": "^1.2.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-active-html": "^1.2.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.3.3",
    "react-redux": "^5.0.7",
    "react-sidebar": "^2.3.2",
    "react-universal-component": "^3.0.0",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-first-router": "^1.9.15",
    "redux-first-router-link": "^1.1.4",
    "redux-responsive": "^4.3.7",
    "reselect": "^3.0.1",
    "transition-group": "^0.0.2",
    "webpack-flush-chunks": "^2.0.1",
    "xmldom": "^0.1.27",
    "yup": "^0.26.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/dateformat": "^1.0.1",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.1",
    "@types/history": "^4.6.2",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/react-helmet": "^5.0.4",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^6.0.4",
    "@types/react-sidebar": "^2.2.3",
    "@types/redux-devtools-extension": "^2.13.2",
    "@types/redux-first-router": "^1.10.2",
    "@types/redux-first-router-link": "^1.4.3",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-env": "^1.13.5",
    "@types/webpack-hot-client": "^4.0.0",
    "@types/webpack-hot-middleware": "^2.16.4",
    "@types/xmldom": "^0.1.29",
    "@types/yup": "^0.24.1",
    "autodll-webpack-plugin": "^0.4.2",
    "chalk": "^2.3.1",
    "compression": "^1.7.2",
