@import url('https://fonts.googleapis.com/css?family=Montserrat:400,600')

*
*:before
*:after
  box-sizing border-box

html
body
  width 100%
  height 100%
  font-size 12px
  margin 0
  font-family: 'Montserrat', sans-serif;

body
  transition background-color 0.5s

:global(#root)
  display flex
  flex-direction column
  width 100%
  min-height 100%
  flex 1 1 100%

.navigationPane
.heraldry
  display flex
  align-items stretch
  width 100%
  z-index 1

.navigationPane
  flex-direction column

.heraldry
  flex-direction row

.left
  display flex
  flex 0 1 33.333%
  flex-direction column

.right
  display flex
  flex 1 0 66.666%
  padding 0 4rem 0 2rem
  flex-direction column

.contentPane
  display flex
  flex-direction row
  flex 1 0 auto
  flex-wrap wrap
  font-size 1.2rem
  line-height 1.8

  &:global(.medium)
    display block
    position relative

    .left
      display flex
      height 100vh
      width 33.333%
      position fixed
      top 0
  
    .right
      display block
      position relative
      margin-left 33.333%
      flex none

.pageIdent
  display flex
  flex 1 0 auto
  flex-direction column
  justify-content flex-end
  margin 0
  padding 0
  position fixed
  bottom 0
  width 33.333%

  :global(.medium) &
    flex 1 1 auto
    width 100%
    position relative

.content
  transition color 0.2s 0.5s
