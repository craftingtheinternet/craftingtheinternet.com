*
*:before
*:after
  box-sizing border-box

html
body
  width 100%
  height 100%
  font-size 12px

body
  margin 0
  background rgb(27, 32, 34)

:global(#root)
.container
  display flex
  flex-direction row
  width 100%
  min-height 100%

.container
  transition background-color 0.2s

.sidebar
  display flex
  flex 0 1 33.333%
  flex-direction column
  justify-content stretch
  padding 4.5rem 0 0

.brandIdent
  display flex
  flex 0 1 auto
  flex-direction column
  justify-content center
  align-self center
  width 100%
  max-width 28rem
  padding 0 2rem 2rem

.pageIdent
  display flex
  flex 1 0 auto
  flex-direction column
  justify-content flex-end

.contentPane
  display flex
  flex 1 0 auto
  flex-direction column

.nav
  flex 0 1 auto
  padding-bottom 2rem

.navList
  padding 0
  margin 0
  list-style none

.content
  flex 1 0 auto
