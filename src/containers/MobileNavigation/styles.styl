.nav
  display flex
  position relative
  flex-direction column
  height 100%
  padding 3rem 0 0
  flex 1 0 auto
  transition background-color 0.3s

.list
  display flex
  width 100%
  height 100%
  min-height 12rem
  margin 0
  padding 0
  list-style none
  justify-content space-between
  flex-direction column

.link
  display flex
  font-size 1.25rem
  text-transform uppercase
  transition color 0.2s
  text-decoration none
  align-items flex-end
  width 100%
  padding 0 2rem

.active
  font-weight 600
