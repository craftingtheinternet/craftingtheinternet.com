.switcher
  display flex
  position relative
  flex 1 0 auto
  flex-direction column

.next
  .fade
    &:global(-enter)
      transform translateX(100%)
      opacity 0
    &:global(-enter-active)
      transform translateX(0%)
      opacity 1
      transition all 500ms
    &:global(-leave)
      transform translateX(0%)
      opacity 1
    &:global(-leave-active)
      transform translateX(-100%)
      opacity 0
      transition all 500ms

.back
  &:global(-enter)
    transform translateX(-100%)
    opacity 0
  &:global(-enter-active)
    transform translateX(0%)
    opacity 1
    transition all 500ms
  &:global(-leave)
    transform translateX(0%)
    opacity 1
  &:global(-leave-active)
    transform translateX(100%)
    opacity 0
    transition all 500ms

.notFound
  background #141414
  border 1px solid rgb(30,30,30)
  box-sizing border-box
  padding 10px
  color red !important
  font-size 32px
  text-shadow 1px 1px 1px black
  display flex
  align-items center
  justify-content center
