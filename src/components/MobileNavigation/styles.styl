.nav
  display flex
  position relative
  flex-direction column
  height 100%
  padding 3rem 1.5rem 0
  flex 1 0 auto

.list
  display flex
  width 100%
  margin 0
  padding 0
  list-style none
  justify-content space-between
  flex-wrap wrap
  flex-direction column

.listItem
  display flex
  font-size 1rem
  line-height 0.675rem
  text-transform uppercase
  width 100%
  line-height 2

.link
  display flex
  transition color 0.2s
  text-decoration none
  align-items flex-end
  width 100%

.active
  font-weight 600
