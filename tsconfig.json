{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src/",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}